{
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "plugins": [
    "flowtype"
  ],
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:flowtype/recommended",
    "plugin:vue/recommended"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "always",
      {
        "js": "never",
        "mjs": "never"
      }
    ],
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ]
  }
}
